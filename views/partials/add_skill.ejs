<% if(typeof section != 'undefined' && section == 'skills'){ %>
    <style>
        /* This interfers with leaflet, so no leaflet in Art section */
        .injected-svg {
            height: 10rem;
            width: 10rem;
            position: relative;
        }
    </style>
    <link rel="stylesheet" href="/stylesheets/simpleLightbox.min.css">
    <br>
    <hr>
    <details>
        <summary class="text-dark">Add a Skill</summary>
        <h2 class="text-dark hidden">Add a Skill</h2>
        <div id="editor" class="pell" data-target="#unique_target" data-max="500"></div>
        <div id="characters-left"></div>
        <div id="font-picker" class="w-100 sm:w-auto" style="box-shadow:none;"></div>
        <details class="px-0">
            <summary class="text-dark mx-0 mb-0" style="border-bottom:none">HTML output</summary>
            <div class="text-dark" style="min-height:25px;" id="html-output" style="white-space:pre-wrap;"></div>
        </details>
        <form class="p-3" action="/listings/skills" enctype="multipart/form-data" method="POST" name="classified_ads">
            <div class="form-group w-100 py-2">
                <a href="javascript:void(0);" NAME="My Window Name" title=" My title here "
                onClick='window.open("http://localhost:3000/so-c/","Ratting","width=550,height=170,left=150,top=200,toolbar=1,status=1,");'>
                Click here to create a social card
                </a>
                <input class="w-100 py-1" type="text" name='p_name' size='8' placeholder="Social Card">
            </div>
            <div class="form-group w-100 py-2">
                <input name="title" id="title" class="add w-100 py-1" value="" placeholder="Title">
            </div>
            <div class="form-group w-100 py-2">
                <div class="w-100"><b>Tag language: </b></div>
                <div class="d-flex justify-content-between">
                  <div>
                    <input type="radio" class="tagsLang" id="english" name="tagsLang" value="english"/>
                    <label for="english">English</label>
                  </div>
                  <div>
                    <input type="radio" class="tagsLang" id="arabic" name="tagsLang" value="arabic"/>
                    <label for="arabic">Arabic</label>
                  </div>
                  <div>
                    <input type="radio" class="tagsLang" id="french" name="tagsLang" value="french"/>
                    <label for="french">French</label>
                  </div>  
                </div>
                <div class="w-100">
                  <a href="/listings/tags" target="_blank" rel="noreferrer noopener">
                      Click here to choose tags
                    </a>
                  <input class="w-100 py-1" name='tags' id='skills' placeholder="Tags">
                </div>
              </div>
            <div>
                <input name="font" id="font" value='Open Sans' type="hidden">
                <!-- TODO: resolve repeated id (in add ) -->
                <input name="desc" id="description" class="add" value="description..." type="hidden">
            </div>
            <div class="form-group py-2">
                <label><b>Upload an image of your skill: </b></label>
                <input class="w-100 py-1" type="file" value='image' name='avatar' accept="image/*" onchange="loadFile(event)">
                <img id="output" width="200"/>
            </div>
            <div class="form-group py-2" id="undraw-input" style="display: flow-root;">
                <!-- TODO: desactivate stretchy -->
                <label for="illu_q">Or you can choose an illustration</label>
                <input class="w-100 py-1" name="illu_q" value="" placeholder="Keywords (@_@)"
                       onchange="javascript:loadIllustrations(this)">
                <div id="parent">Color</div>
            </div>
            <input name="undraw" id="undraw" value='' type="hidden">
            <input name="section" value='skills' type="hidden">
            <div>
                <button class="btn btn-primary w-100 py-2 sm:w-auto sm:py-1">Add listing</button>
            </div>
        </form>
    </details>
    <script>
        {
            const scriptElement = document.createElement("script")
            scriptElement.src = "/javascripts/skills.js"
            document.body.appendChild(scriptElement)
        }
    </script>
<% } %>